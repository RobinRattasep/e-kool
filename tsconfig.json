{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "lib": ["es2020"],
    "module": "commonjs",
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "target": "es2022",
    "types": ["node"],
    "outDir": "dist",
    "noImplicitAny": false
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "experimentalDecorators": true,
  "emitDecoratorMetadata": true
}